{
    "ModName": "Total AI Control",
    "SchemaVersion": 1,
    "Tabs": [
        {
            "TabId": "general",
            "TabName": "General",
            "Sections": [
                {
                    "SectionId": "general_settings",
                    "SectionName": "General Settings",
                    "Settings": [
                        {
                            "Id": "mod_enabled",
                            "Type": "checkbox",
                            "Name": "Enabled",
                            "Description": "Toggle the mod on/off.",
                            "Default": true
                        },
                        {
                            "Id": "auto_grant_container",
                            "Type": "checkbox",
                            "Name": "Auto-grant AI container spell",
                            "Description": "Give the Target AI spell container to all party members on load or when they join.",
                            "Default": true
                        },
                        {
                            "Id": "revivify_prompt",
                            "Type": "checkbox",
                            "Name": "Revivify prompt",
                            "Description": "Show the Scroll of Revivify prompt when protected deaths occur.",
                            "Default": true
                        },
                        {
                            "Id": "nonlethal_follow_controlled",
                            "Type": "checkbox",
                            "Name": "Follow non-lethal state",
                            "Description": "When you toggle Non-Lethal on the controlled character, mirror it to AI companions.",
                            "Default": true
                        }
                    ]
                },
                {
                    "SectionId": "logger_settings",
                    "SectionName": "Logger Settings",
                    "Settings": [
                        {
                            "Id": "logger_level",
                            "Type": "slider_int",
                            "Name": "Logger level",
                            "Description": "0 = DEBUG, 1 = INFO, 2 = WARN, 3 = ERROR",
                            "Default": 1,
                            "Options": {
                                "Min": 0,
                                "Max": 3
                            }
                        }
                    ]
                }
            ]
        },
        {
            "TabId": "ai_config",
            "TabName": "AI Config",
            "Sections": [
                {
                    "SectionId": "spells_settings",
                    "SectionName": "Spell Settings",
                    "Settings": [
                        {
                            "Id": "ignored_spells",
                            "Type": "list_v2",
                            "Name": "Ignored spells",
                            "Description": " ",
                            "Default": {
                                "enabled": true,
                                "elements": [
                                    {
                                        "name": "Shout_DetectThoughts",
                                        "enabled": true
                                    },
                                    {
                                        "name": "Shout_PassWithoutTrace",
                                        "enabled": true
                                    },
                                    {
                                        "name": "Shout_Thaumaturgy",
                                        "enabled": true
                                    },
                                    {
                                        "name": "Target_ArcaneLock",
                                        "enabled": true
                                    },
                                    {
                                        "name": "Target_BlessingOfTheTrickster",
                                        "enabled": true
                                    },
                                    {
                                        "name": "Target_Friends",
                                        "enabled": true
                                    },
                                    {
                                        "name": "Target_Seeming",
                                        "enabled": true
                                    }
                                ]
                            },
                            "Options": {
                                "AllowReordering": true,
                                "PageSize": 8,
                                "ReadOnly": false,
                                "ShowSearchBar": true
                            }
                        },
                        {
                            "Id": "ai_summons_enabled",
                            "Type": "checkbox",
                            "Name": "Enable AI summons",
                            "Description": "Allow tagging and controlling summons via the AI Summons toggle and tag.",
                            "Default": true
                        }
                    ]
                }
            ]
        }
    ]
}
